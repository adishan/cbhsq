@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600')

$font = 'Open Sans', sans-serif;

html
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smothing: grayscale
  -webkit-tap-highlight-color: transparent

body
  font-family: $font
  font-weight: 400
  font-size: 1rem
  line-height: 1.5rem

p,
blockquote,
figure,
ol,
ul {
    margin: 0
    padding: 0
}
main,
li
  display: block

h1,
h2,
h3,
h4,
 {
   margin: 0.3125rem 0
   padding: 0
   font-family:  $font
   line-height: 100%
}

// need to set up responsive typography once media queries are in place -- here's dektop to start
h1
  font-size: 2rem
  @media (min-width: $lg)
    font-size: 2.5rem

h2
  font-size: 1.625rem
  @media (min-width: $lg)
    font-size: 2rem

h3
  font-size: 1.375rem
  @media (min-width: $lg)
    font-size: 1.5rem

h4
  font-size: 1.125rem

p
  margin: 1.5rem 0

.small--text
  font-size: 75%

a
  color: c-link
  text-decoration: none
  &:hover
    color: c-link-hover

.helptext
  font-style: italic
  font-size: 85%
