$flex-centered
  display: flex
  justify-content: center
  align-items: center

.search-reports
  with: 100%
  h1
    padding: 20px
    @media(min-width: $lg)
      margin-bottom: 120px
  .search-reports-form
    @extends $flex-centered
    input
      width: 50%

.annoucements
  margin: 50px 0px
  @media(min-width: $lg)
    margin: 50px 80px 0 80px
  p
    margin: 0 0 5px 0
    padding: 0
    line-height: 24px
  .kick
    font-size: .75rem
    padding: 0px
    margin: 0px
  p.title
    font-size: 1.5rem
.topics
  width: 100%
  margin-top: 10px
  padding-top: 10px
  ul
    -webkit-column-count: 2
    -moz-column-count: 2
    column-count: 2
    @media(min-width: $md)
      -webkit-column-count: 3
      -moz-column-count: 3
      column-count: 3
  li
    padding:  15px 0
    color: c-link

.hottops
  width: 100%
  margin-top: 40px
  padding-top: 20px
  border-top: 1px solid c-lt-gray
  h4
    font-weight: bold


.home-content
  display: flex
  justify-content: space-between
  flex-flow: row wrap
  @media(max-width: $md)
    display: block
  h3
    flex: 1 100%
  .latest-release
    flex: 2
    margin-bottom: 20px
    padding-right: 1.25rem;
    @media(max-width: $md)
      padding-right: 0;
      margin-bottom: 0px
  .collections
    flex: 1
    @media(max-width: $md)
      padding: 20px 0
