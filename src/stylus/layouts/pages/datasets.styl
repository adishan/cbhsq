.container
  @media(max-width: $xl)
     font-size: 14px

  @media(max-width: $lg)
      font-size: 12px

   @media(max-width: $md)
      font-size: 12px
      line-height: 1.4em

  @media(max-width: $sm)
        font-size: 10px
        line-height: 1.6em

div.banner
  width 100%
  height 120px
  background-color gray
  text-align  center;

.container
  margin-left 10em
  margin-right 10em

.container-table
    margin-left 2em
    margin-right 2em

h3
  .dasis_title
    margin-top: 40px;
    margin-left: 20px
    text-align left;
    padding 10px;

  .table_title
    margin-top: 40px;

div.dataset_card
      margin 20px 20px 0 20px
      padding 20px
      border-style solid
      border-width 1px
      border-color #f4f4f4
      border-radius 3px
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.2)

.title_row
  display flex

.dataset_title
  text-align: left;
  flex 1

.dataset_updated
  text-align: right;
  flex 1

.dataset_desc
  margin-top: 20px

.select_dataset
  margin-top 20px
  display flex
  .states
    flex .05
  .years
    flex .1

  .seedata
    border-radius 3px
    border-color #4CAF50
    background-color #4CAF50
    color white
    font-weight 600
    @media(min-width: $lg)
         padding-right 40px
         padding-left 40px
         margin-left: 50px;

a.buttonlink
  color: white

.subtitle
  display flex
  @media(min-width:$lg)
    flex-direction row
    align-items: flex-start;
    margin-top: 20px;

  @media(max-width:$lg)
    flex-direction column
    margin-top: 20px;

div.aboutdata
    display flex
    flex 1
    flex-direction: row
    align-items: flex-start;

    @media(max-width:800px)
     margin-top: 20px;
     margin-bottom: 20px;

   .search
     display: flex;
     flex-direction: row
     .search_label
       flex: 2
     .searchinput
       flex: 2
     @media(min-width:1025px)
       margin-right: 40px;

   .export
     display: flex
     flex-direction: row
     .export_label
       flex 4



table.datatable
  width 100%
  margin-top 2em
  background-color #ffffff;
  white-space: nowrap;
  border-style: solid;
  border-width: 1px;

  @media(min-width: $lg)
   font-size 14px


th.tabheader
  background-color: #fcfce3
  padding-left: 10px;
  padding-right:10px;



tr
  background-color: white
  border-left: solid
  border-width: 1px
  border-color: #f4f4f4
  background-color: white

tr.mainrow
  background-color: #ffeded

tr.innerrow
  background-color: #edf9ff

td.cell
  background-color: white;
  text-align: center;

.footer-dasis
  margin-bottom: 40px


h3.table_title
  margin-top: 40px;

div.scroller
      overflow-x: scroll;
      overflow-y: visible;
      width: 100%;


.bells
  display Flex
  margin-top: 20px;

  .pagination
      display: inline-block;

  .pagination a
      color: black;
      float: left;
      padding: 8px 12px;
      text-decoration: none;


  .pagination a.active
      background-color: #075290;
      color: white;

  .pagination a:hover:not(.active)
     background-color: #ddd

  .showentries
    padding: 8px 30px;
    font-weight: bold;




