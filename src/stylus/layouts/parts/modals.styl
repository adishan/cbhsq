.modal
  display:none
  position: relative
  .modal-content
    border: 1px solid c-lt-gray
    position: absolute
    z-index: 100
    bottom: 0
    padding: 20px
    background-color: c-paper
    .copybox
      border: 1px solid c-gray
      border-radius:3px
      padding:5px
      box-shadow: inset 0 0 10px #000000

// in rail modal should not be set to bottom
.sidebar, .sidebar1, .sidebar2
  .modal-content
    top: 0
    bottom: auto
